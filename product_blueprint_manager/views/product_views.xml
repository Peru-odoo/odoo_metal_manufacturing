<odoo>
    <record id="view_product_template_form" model="ir.ui.view">
        <field name="name">product.template.form.inherit.blueprint</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="generate_dynamic_blueprint" string="Generate Blueprint" type="object" class="oe_highlight"/>
                <button name="preview_blueprint_template" string="Preview Blueprint Template" type="object"/>
            </xpath>
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Blueprints y Fórmulas">
                    <group string="Blueprints">
                        <field name="blueprint_ids">
                            <tree>
                                <field name="name"/>
                                <field name="filename"/>
                            </tree>
                            <form>
                                <sheet>
                                    <group>
                                        <field name="name"/>
                                        <field name="filename"/>
                                        <field name="file" widget="image" string="File Preview"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                    <group string="Fórmulas">
                        <field name="formula_ids">
                            <tree>
                                <field name="name"/>
                                <field name="blueprint_id"/>
                                <field name="formula_expression"/>
                            </tree>
                            <form>
                                <sheet>
                                    <group>
                                        <field name="name"/>
                                        <field name="available_attributes"/>
                                        <field name="formula_expression"/>
                                        <field name="blueprint_id"/>
                                        <field name="position_x"/>
                                        <field name="position_y"/>
                                    </group>
                                    <!--<group>
                                        <field name="blueprint_width" readonly="1"/>
                                        <field name="blueprint_height" readonly="1"/>
                                    </group>-->
                                </sheet>
                            </form>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
