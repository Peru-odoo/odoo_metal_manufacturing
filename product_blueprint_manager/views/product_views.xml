<odoo>
    <record id="view_product_template_form" model="ir.ui.view">
        <field name="name">product.template.form.inherit.blueprint</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <!-- Insertar el botón para previsualizar la plantilla del plano -->
            <xpath expr="//header" position="inside">
                <button name="generate_dynamic_blueprint" string="Generate Blueprint" type="object" class="oe_highlight"/>
                <button name="preview_blueprint_template" string="Preview Blueprint Template" type="object"/>
            </xpath>
            <!-- Insertar una nueva pestaña dentro del notebook -->
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Blueprints y Fórmulas">
                    <!-- Configuración de Blueprints -->
                    <group string="Blueprints">
                        <field name="blueprint_ids" string="Blueprints">
                            <tree>
                                <field name="name" string="Name"/>
                                <field name="filename" string="Filename"/>
                            </tree>
                            <form>
                                <sheet>
                                    <group>
                                        <field name="name" string="Name"/>
                                        <field name="filename" string="Filename"/>
                                        <field name="file" filename="filename" string="File"/>
                                        <!-- Añadir campos de ancho y alto -->
                                        <field name="width" string="Width" readonly="1"/>
                                        <field name="height" string="Height" readonly="1"/>
                                        <!-- Añadir una ventana de previsualización -->
                                        <field name="file" widget="image" class="oe_inline" string="File Preview"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                    <separator string="Fórmulas"/>
                    <!-- Configuración de Fórmulas -->
                    <group string="Fórmulas">
                        <field name="formula_ids" string="Formulas">
                            <tree>
                                <field name="name" string="Name"/>
                                <field name="formula_expression" string="Formula Expression"/>
                                <field name="blueprint_id" string="Blueprint"/>
                            </tree>
                            <form>
                                <sheet>
                                    <group>
                                        <field name="name" string="Name"/>
                                        <!-- Mostrar los atributos disponibles -->
                                        <field name="available_attributes" readonly="1" string="Available Attributes"/>
                                        <field name="formula_expression" string="Formula Expression"/>
                                        <field name="blueprint_id" string="Blueprint"/>
                                        <field name="position_x" string="Position X"/>
                                        <field name="position_y" string="Position Y"/>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
