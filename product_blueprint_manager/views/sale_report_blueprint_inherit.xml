<odoo>
    <template id="sale_report_blueprint_inherit" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@class='page']" position="after">
            <div t-if="doc.order_line" class="page">
                <div style="page-break-before: always;" class="text-center">
                    <h2>Blueprints Evaluados</h2>
                    <p>Cliente: <span t-field="doc.partner_id.name"/></p>
                    <p>
                        <t t-if="doc.state in ['draft', 'sent']">Presupuesto</t>
                        <t t-elif="env.context.get('proforma', False) or is_pro_forma">Proforma</t>
                        <t t-elif="doc.state == 'sale'">Pedido</t>
                        <t t-elif="doc.state == 'done'">Pedido Confirmado</t>
                        <t t-else="">Documento de Venta</t>
                        #: <span t-field="doc.name"/>
                    </p>
                    <p>Fecha: <span t-field="doc.date_order" t-options="{'widget': 'date'}"/></p>
                </div>
                <t t-foreach="doc.order_line" t-as="line">
                    <t t-if="line.product_id.product_tmpl_id.blueprint_ids">
                        <t t-foreach="line.product_id.product_tmpl_id.blueprint_ids" t-as="blueprint">
                            <t t-if="blueprint.file">
                                <div style="page-break-after:always;">
                                    <p><strong>Producto:</strong> <span t-field="line.product_id.name"/></p>
                                    <t t-set="custom_values" t-value="line._get_evaluated_variables(line) or {}"/>
                                    <t t-foreach="line.product_id.product_tmpl_id.formula_ids.filtered(lambda f: f.blueprint_id == blueprint)" t-as="formula">
                                        <p><strong>Resultado de la Fórmula:</strong></p>
                                        <t t-if="formula.formula_expression and custom_values">
                                            <t t-try="">
                                                <span t-esc="eval(formula.formula_expression, {}, custom_values)"/>
                                            </t>
                                            <t t-except="Exception">
                                                <span>'Error al evaluar la fórmula'</span>
                                            </t>
                                        </t>
                                        <t t-else="'N/A'"/>
                                    </t>
                                    <img t-att-src="'data:image/svg+xml;base64,' + blueprint.file.decode()" style="width:100%; height:auto;"/>
                                </div>
                            </t>
                        </t>
                    </t>
                </t>
            </div>
        </xpath>
    </template>
</odoo>
