<odoo>
    <record id="view_sale_order_line_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.product.configurator</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//field[@name='price_unit']" position="after">
                <field name="price_modified" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
